      <PermitValueRule xsi:type="basic:ANY" />
    </AttributeRule>
<!-- Attribute surname is not supported by this Identity Provider. Please configure your Attribute Resolver accordingly and indicate your support using Federation Registry -->
  </AttributeFilterPolicy>

</AttributeFilterPolicyGroup>